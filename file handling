#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n,sum=0;
    printf("Enter the size of array => "); scanf("%d",&n);
    int *a;
    a=(int*)malloc(n*sizeof(int));
        printf("Enter %d elements => ",n);
    for(int i=0;i<n;i++)
    {
        scanf("%d",(a+i));
        sum=sum+*(a+i);
    }
    printf("sum = > %d",sum);
    return 0;
}
